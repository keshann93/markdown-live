{
	"name": "markdown-live",
	"displayName": "Markdown Live",
	"description": "real-time markdown UI composer",
	"publisher": "keshan",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/KeshShan/markdown-live.git"
	},
	"icon": "icons/marketplace.png",
	"galleryBanner": {
	  "color": "#111111",
	  "theme": "dark"
	},
	"preview": true,
	"main": "./out/extesnion/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "markdown-live.showPanel",
				"title": "Toggle Markdown Live panel",
				"icon": {
					"dark": "./icons/icon-light.png",
					"light": "./icons/icon-dark.png"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == md",
					"command": "markdown-live:showPanel",
					"alt": "markdown-live:showPanel",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./src/extension --project ./tsconfig.json",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"ui": "webpack-dev-server --env.development --config ./webpack.config.js",
		"build-ui": "webpack --env.production --config ./webpack.config.js",
		"build": "rimraf out && yarn compile && yarn build-ui",
		"package-ext": "vsce package",
		"publish-ext": "vsce publish"
	},
	"devDependencies": {
		"@babel/core": "^7.4.3",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-object-rest-spread": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-react": "^7.0.0",
		"@babel/preset-typescript": "^7.3.3",
		"@types/babel-traverse": "^6.25.5",
		"@types/chai": "^4.1.7",
		"@types/react": "^16.8.14",
		"@types/react-dom": "^16.8.4",
		"@types/react-select": "^2.0.17",
		"@types/styled-components": "4.1.10",
		"@types/styled-system": "^4.1.1",
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"all-contributors-cli": "^6.6.1",
		"babel-loader": "^8.0.5",
		"chai": "^4.2.0",
		"cross-env": "^5.2.0",
		"css-loader": "^2.1.1",
		"file-loader": "^3.0.1",
		"html-webpack-plugin": "^3.2.0",
		"html-webpack-template": "^6.2.0",
		"husky": "^2.3.0",
		"mocha-typescript": "^1.1.17",
		"prettier": "1.17.1",
		"pretty-quick": "^1.11.0",
		"react": "^16.8.6",
		"react-color": "^2.17.2",
		"react-dom": "^16.8.6",
		"react-feather": "^1.1.6",
		"react-select": "^2.4.3",
		"react-tippy": "^1.2.3",
		"rimraf": "^2.6.3",
		"style-loader": "^0.23.1",
		"styled-components": "^4.2.0",
		"styled-system": "^4.1.0",
		"vscode": "^1.1.28",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.1",
		"webpack-dev-server": "^3.3.1"
		
	},
	"dependencies": {
		"@babel/traverse": "^7.4.3"
	},
	"husky": {
		"hooks": {
		  "pre-commit": "pretty-quick --staged"
		}
	}
}
